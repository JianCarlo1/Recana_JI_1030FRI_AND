<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Container for portrait mode -->

    <!-- Container for landscape mode (two fragments side by side) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/landscape_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"> <!-- Initially hidden, only visible in landscape -->

        <FrameLayout
            android:id="@+id/fragment_container_headlines"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fragment_container_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" /> <!-- Right fragment takes up more space -->
    </LinearLayout>
</LinearLayout>
