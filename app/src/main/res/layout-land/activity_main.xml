<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/portrait">

    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textSize="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:lines="1"

        android:gravity="end"
        android:hint="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/teal_700"/>

    <GridLayout
        android:id="@+id/gridLayoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextResult">

        <Button
            android:id="@+id/button7"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="7"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/button8"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="8"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/button9"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="9"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="/"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="4"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="5"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/button6"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="6"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="*"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="1"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="2"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="3"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="-"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow1" />
        <Button
            android:id="@+id/button0"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />
        <Button
            android:id="@+id/buttonDot"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="."
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow1" />
        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="="
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow1" />
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow1" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="C"
            android:backgroundTint="#FF6666"
            android:layout_margin="4dp"
            android:background="@drawable/button_glow" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
